{
  "port": 8080,
  "max_connections": 100,
  "log_file": "logs/cockpit.log",
  "audit_dir": "audit/",
  "enable_kill_switch": true,
  "enable_moral_core": true,
  "enable_change_gate": true,
  "enable_fdqc": true,
  
  "fdqc": {
    "vcca": {
      "epsilon": 0.1,
      "learning_rate": 0.01,
      "discount_factor": 0.95
    },
    "affective": {
      "alpha_valence": 0.9,
      "alpha_arousal": 0.8,
      "alpha_novelty": 0.7
    },
    "memory": {
      "buffer_size": 20,
      "buffer_duration_sec": 2.0,
      "episodic_max_size": 10000,
      "similarity_threshold": 0.85
    },
    "collapse": {
      "frequency_hz": 10.0,
      "entropy_threshold_ratio": 0.8,
      "temperature": 1.0
    }
  }
}
